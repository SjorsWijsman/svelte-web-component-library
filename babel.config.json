{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "browsers": ["last 2 versions", "ie >= 9"] // Targets IE9 and above
                },
                "useBuiltIns": "usage", // Automatically include polyfills based on usage
                "corejs": 3, // Use core-js version 3 for polyfills
                "modules": false
            }
        ]
    ]
}
